<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VardaIcons">
        <!-- should support normal, android:state_pressed, feedback, android:state_pressed+feedback, android:state_checked, state_checked+feedback -->
        <item name="iconKeyShift">@drawable/key_shift_set</item>
        <!-- should support normal, android:state_pressed, feedback, android:state_pressed+feedback, android:state_checked, state_checked+feedback -->
        <item name="iconKeyControl">@drawable/control_set</item>
        <!-- should support normal, feedback -->
        <item name="iconKeyBackspace">@drawable/backspace</item>
        <!-- should support normal, feedback -->
        <item name="iconKeyForwardDelete">@drawable/forward_delete</item>
        <!-- should support normal, feedback -->
        <item name="iconKeySpace">@drawable/space</item>
        <!-- should support normal, feedback -->
        <item name="iconKeyTab">@drawable/sym_keyboard_tab</item>
        <!-- should support normal, feedback -->
        <item name="iconKeyCancel">@drawable/keyboard_down</item>
        <!-- should support normal, feedback -->
        <item name="iconKeyGlobe">@drawable/language</item>
        <!-- should support normal, key_type_feedback, action_done, action_done+key_type_feedback, action_search, action_search+key_type_feedback, action_go, action_go+key_type_feedback  -->
        <item name="iconKeyAction">@drawable/key_action_set</item>
        <!-- should support normal, feedback -->
        <item name="iconKeyMic">@drawable/mic_popoup</item>
        <!-- should support normal, feedback -->
        <item name="iconKeySettings">@drawable/settings_popup</item>

        <!-- condensing icons -->
        <item name="iconKeyCondenseNormal">@drawable/keyboard_normal</item>
        <item name="iconKeyCondenseSplit">@drawable/keyboard_split</item>
        <item name="iconKeyCondenseCompactToRight">@drawable/keyboard_right</item>
        <item name="iconKeyCondenseCompactToLeft">@drawable/keyboard_left</item>

        <item name="iconKeyClipboardCopy">@drawable/copy</item>
        <item name="iconKeyClipboardCut">@drawable/cut</item>
        <item name="iconKeyClipboardPaste">@drawable/paste</item>
        <item name="iconKeyClipboardSelect">@drawable/select_all</item>
        <item name="iconKeyClipboardFineSelect">@drawable/clipboard_fine_select</item>
        <item name="iconKeyQuickText">@drawable/smiley</item>
        <item name="iconKeyQuickTextPopup">@drawable/smiley</item>

        <item name="iconKeyArrowRight">@drawable/arrow_right</item>
        <item name="iconKeyArrowLeft">@drawable/arrow_left</item>
        <item name="iconKeyArrowUp">@drawable/arrow_up</item>
        <item name="iconKeyArrowDown">@drawable/arrow_down</item>
        <item name="iconKeyUndo">@drawable/undo</item>
        <item name="iconKeyRedo">@drawable/redo</item>
    </style>

    <style name="VardaBase">
        <item name="android:background">@drawable/background</item>
        <item name="keyBackground">@drawable/btn_keyboard_key</item>
        
        <item name="keyTextSize">@dimen/key_text_size</item>
        <item name="keyTextStyle">bold</item>
        <item name="keyTextColor">@color/varda_white</item>
        <item name="labelTextSize">@dimen/key_label_text_size</item>
        
        <item name="shadowColor">@color/varda_shadow</item>
        <item name="shadowRadius">0px</item>
        <item name="shadowOffsetX">0px</item>
        <item name="shadowOffsetY">0px</item>
        <item name="backgroundDimAmount">0.7</item>
        
        <!-- key preview (feeback) - none -->
        <item name="keyPreviewTextSize">0px</item>
        
        <!-- key heights -->
        <item name="keyNormalHeight">@dimen/default_key_height</item>
        <item name="keySmallHeight">@dimen/default_key_half_height</item>
        <item name="keyLargeHeight">@dimen/default_key_tall_height</item>

        <!-- key gaps -->       
        <item name="keyHorizontalGap">@dimen/default_key_horizontal_gap</item>
        <item name="keyVerticalGap">@dimen/default_key_vertical_gap</item>

        <!-- suggestion strip -->
        <item name="suggestionNormalTextColor">@color/varda_white</item>
        <item name="suggestionOthersTextColor">@color/varda_white_transparent</item>
        <item name="suggestionTextSize">@dimen/candidate_font_height</item>
        <item name="suggestionBackgroundImage">@drawable/background</item>
        <item name="suggestionCloseImage">@drawable/close_suggestions</item>
    </style>

    <style name="VardaPopup" parent="@style/VardaBase">
        <item name="android:background">@drawable/popup_background</item>
        <item name="keyBackground">@drawable/btn_keyboard_key_popup</item>
        <!-- this will say "no preview" -->
        <item name="keyPreviewTextSize">0px</item>
        <item name="keyTextColor">@color/varda_white</item>
    </style>

    <style name="VardaRed" parent="@style/VardaBase">
        <item name="hintTextColor">@color/varda_red</item>
        <item name="swipeTypingColor">@color/varda_red</item>
        <item name="swipeTypingShadowColor">@color/varda_red</item>
        <item name="suggestionRecommendedTextColor">@color/varda_red</item>
    </style>

    <style name="VardaGreen" parent="@style/VardaBase">
        <item name="hintTextColor">@color/varda_green</item>
        <item name="swipeTypingColor">@color/varda_green</item>
        <item name="swipeTypingShadowColor">@color/varda_green</item>
        <item name="suggestionRecommendedTextColor">@color/varda_green</item>
    </style>

</resources>
