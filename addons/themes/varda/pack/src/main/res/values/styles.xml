<resources>
    <style name="VardaBase">
        <item name="android:background">@drawable/background</item>
        <item name="keyBackground">@drawable/btn_keyboard_key</item>
        
        <item name="keyTextSize">@dimen/key_text_size</item>
        <item name="keyTextStyle">bold</item>
        <item name="keyTextColor">@color/varda_white</item>
        <item name="labelTextSize">@dimen/key_label_text_size</item>
        
        <item name="shadowColor">@color/varda_shadow</item>
        <item name="shadowRadius">0px</item>
        <item name="shadowOffsetX">0px</item>
        <item name="shadowOffsetY">0px</item>
        <item name="backgroundDimAmount">0.7</item>
        
        <!-- key preview (feeback) - none -->
        <item name="keyPreviewTextSize">0px</item>
        
        <!-- key heights -->
        <item name="keyNormalHeight">@dimen/default_key_height</item>
        <item name="keySmallHeight">@dimen/default_key_half_height</item>
        <item name="keyLargeHeight">@dimen/default_key_tall_height</item>

        <!-- key gaps -->       
        <item name="keyHorizontalGap">@dimen/default_key_horizontal_gap</item>
        <item name="keyVerticalGap">@dimen/default_key_vertical_gap</item>

        <!-- suggestion strip -->
        <item name="suggestionNormalTextColor">@color/varda_white</item>
        <item name="suggestionOthersTextColor">@color/varda_white_transparent</item>
        <item name="suggestionTextSize">@dimen/candidate_font_height</item>
        <item name="suggestionBackgroundImage">@drawable/background</item>
    </style>

    <style name="VardaPopup" parent="@style/VardaBase">
        <item name="android:background">@drawable/popup_background</item>
        <item name="keyBackground">@drawable/btn_keyboard_key_popup</item>
        <!-- this will say "no preview" -->
        <item name="keyPreviewTextSize">0px</item>
        <item name="keyTextColor">@color/varda_white</item>
    </style>

    <style name="VardaRed" parent="@style/VardaBase">
        <item name="hintTextColor">@color/varda_red</item>
        <item name="swipeTypingColor">@color/varda_red</item>
        <item name="suggestionRecommendedTextColor">@color/varda_red</item>
    </style>
    <style name="VardaGreen" parent="@style/VardaBase">
        <item name="hintTextColor">@color/varda_green</item>
        <item name="swipeTypingColor">@color/varda_green</item>
        <item name="suggestionRecommendedTextColor">@color/varda_green</item>
    </style>
</resources>
